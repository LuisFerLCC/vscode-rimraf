{
	"name": "vscode-rimraf",
	"displayName": "VSCode rimraf",
	"description": "Permanently delete files and folders (like `npx rimraf` or `rm -rf`, directly from the VSCode GUI and Command Palette).",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-rimraf.helloWorld",
		"onView:testTreeView"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-rimraf.helloWorld",
				"title": "Hello World"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "testTreeView",
					"name": "Test tree view"
				}
			]
		}
	},
	"scripts": {
		"build": "npm run format && tsc",
		"build:watch": "npm run format && tsc --watch",
		"test": "node ./dist/runTest.js",
		"pretest": "npm run build",
		"vscode:prepublish": "npm run build",
		"format": "prettier --write . && eslint --ext .js,.ts --fix ."
	},
	"devDependencies": {
		"@types/eslint": "^8.4.6",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.70.0",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"@vscode/test-electron": "^2.1.5",
		"eslint": "^8.23.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"prettier": "^2.7.1",
		"typescript": "~4.7.2"
	}
}
