{
	"version": "2.0.0",

	"tasks": [
		{
			"label": "ESBuild: Compile",
			"icon": {
				"id": "archive",
				"color": "terminal.ansiYellow"
			},

			"type": "npm",
			"script": "build",

			"isBackground": false,
			"group": "build",
			"presentation": {
				"echo": false,
				"panel": "dedicated",
				"showReuseMessage": false
			},

			"problemMatcher": ["$eslint-compact", "$tsc"]
		},

		{
			"label": "ESBuild: Compile (Watch Mode)",
			"icon": {
				"id": "search",
				"color": "terminal.ansiYellow"
			},

			"type": "npm",
			"script": "build:watch",

			"isBackground": true,
			"group": "build",
			"presentation": {
				"echo": false,
				"panel": "dedicated",
				"showReuseMessage": false
			},

			"problemMatcher": [
				"$eslint-compact",
				{
					"owner": "node",
					"source": "esbuild",
					"applyTo": "closedDocuments",
					"base": "$eslint-compact",

					"background": {
						"beginsPattern": { "regexp": ">" },
						"endsPattern": { "regexp": "ESBuild is active" }
					}
				}
			]
		},

		{
			"label": "VSCode: Bundle extension",
			"icon": {
				"id": "archive",
				"color": "terminal.ansiCyan"
			},

			"type": "npm",
			"script": "package",

			"isBackground": false,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": false,
				"panel": "dedicated",
				"showReuseMessage": false
			},

			"problemMatcher": ["$eslint-compact", "$tsc"]
		},

		{
			"label": "Prettier ESLint: Format",
			"icon": {
				"id": "wand",
				"color": "terminal.ansiMagenta"
			},

			"type": "npm",
			"script": "format",

			"isBackground": false,
			"group": "build",
			"presentation": {
				"echo": false,
				"panel": "dedicated",
				"showReuseMessage": false
			},

			"problemMatcher": ["$eslint-compact"]
		},

		{
			"label": "NPM: Link local dependencies",
			"icon": {
				"id": "package",
				"color": "terminal.ansiRed"
			},

			"type": "shell",
			"command": "npm link ${input:localPackages}",

			"isBackground": false,
			"presentation": {
				"echo": false,
				"panel": "dedicated",
				"showReuseMessage": false
			},

			"problemMatcher": []
		}
	],

	"inputs": [
		{
			"id": "localPackages",
			"description": "Local dependencies to link",
			"type": "promptString"
		}
	]
}
